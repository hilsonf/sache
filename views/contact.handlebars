<div class="row">

  <form name="message" id="message" class="col s12 m12 l12" action="/message" method="post">

    <div class="input-field col s12 m12 l6">
      <i class="material-icons prefix">account_circle</i>            
      <input id="name" name="name" type="text" class="validate" required>
      <label for="name">Enter Name</label>
    </div>

    <div class="input-field col s12 m12 l6">
      <i class="material-icons prefix">subject</i>
      <input id="subject" name="subject" type="text" class="validate" required>
      <label for="subject">Enter Subject</label>
    </div>

    <div class="input-field col s12 m12 l6">
      <i class="material-icons prefix">email</i>
      <input id="email" name="email" type="text" class="validate" pattern="[^@]+@[^@]+\.[a-zA-Z]{2,}" required>
      <label for="email" data-error="Ex example@gmail.com">Enter Email</label>
    </div>

    <div class="input-field col s12 m6 l6">
      <i class="material-icons prefix">phone</i>
      <input id="tell" name="tell" type="tel" class="validate" pattern="^\d{3}\d{4}$" required>
      <label for="tell" data-error="Ex 3448896">Enter Telephone</label>
    </div>

    <div class="input-field col s12 m12 l12">
      <i class="material-icons prefix">mode_edit</i>
      <textarea id="mymessage" name="mymessage" class="materialize-textarea validate" required></textarea>
      <label for="mymessage">Enter Message</label>
    </div>

    <div class="row"></div>

    <button class="btn waves-effect waves-light right margin" type="submit" disabled>Send
      <i class="material-icons right">send</i>
    </button>
  </form>

</div>