<div class="row">

  <form name="message" id="message" class="col s12 m12 l12" action="/message" method="post">

    <div class="input-field col s12 m12 l6">
      <i class="material-icons prefix">account_circle</i>            
      <input id="senderName" name="senderName" type="text" class="validate" required>
      <label for="senderName">Enter Name</label>
    </div>

    <div class="input-field col s12 m12 l6">
      <i class="material-icons prefix">subject</i>
      <input id="subject" name="subject" type="text" class="validate" required>
      <label for="subject">Enter Subject</label>
    </div>

    <div class="input-field col s12 m12 l6">
      <i class="material-icons prefix">email</i>
      <input id="senderEmail" name="senderEmail" type="text" class="validate" pattern="[^@]+@[^@]+\.[a-zA-Z]{2,}" required>
      <label for="senderEmail" data-error="Ex example@gmail.com">Enter Email</label>
    </div>

    <div class="input-field col s12 m6 l6">
      <i class="material-icons prefix">phone</i>
      <input id="senderTell" name="senderTell" type="tel" class="validate" pattern="[0-9]{10}" required>
      <label for="senderTell" data-error="Ex 3448896223">Enter Telephone</label>
    </div>

    <div class="input-field col s12 m12 l12">
      <i class="material-icons prefix">mode_edit</i>
      <textarea id="senderMessage" name="senderMessage" class="materialize-textarea validate" required></textarea>
      <label for="senderMessage">Enter Message</label>
    </div>
    <div class="row"></div>

    <button class="btn waves-effect waves-light right margin" type="submit" disabled>Send
      <i class="material-icons right">send</i>
    </button>
  </form>

</div>