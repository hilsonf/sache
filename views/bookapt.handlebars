<div class="row"></div>

<div class="container headings">
  <h1>Book It</h1>
  <i class="material-icons">shopping_cart</i>
  <hr>
</div>
<div class="row"></div>
<div class="row"></div>
<div class="row"></div>

<div class="row">

  <form class="col s12 m12 l12" name="booking">
    

    <div class="row form-section">

      <div class="input-field col s12 m4 l4">
        <i class="material-icons prefix">subject</i>
        <input id="firstName" name="firstName" type="text" class="validate" required>        
        <label for="firstName">Enter First Name</label>
      </div>

      <div class="input-field col s12 m4 l4">
        <i class="material-icons prefix">subject</i>
        <input id="lastName" name="lastName" type="text" class="validate" required>        
        <label for="lastName">Enter Last Name</label>
      </div>

      <div class="input-field col s12 m4 l4">
        <i class="material-icons prefix">phone</i>
        <input id="tell" name="tell" type="tel" class="validate" required>
        <label for="tell">Enter Telephone</label>
      </div>

      <div class="input-field col s12 m6 l6">
        <i class="material-icons prefix">access_time</i>
        <input id="bookDate" name="bookDate" type="text" class="datepicker" required>
        <label for="bookDate">Select Day</label>
      </div>

      
      <div class="input-field col s12 m6 l6">
          <i class="material-icons prefix">access_time</i>
          <label for="bookTime">Select Time</label>
          <input id="bookTime" class="timepicker" type="time" required>
      </div>
                 

    </div>


    <div class="row"></div>

    <button class="btn waves-effect waves-light right margin" type="button" name="order" onClick="submitBooking()">Book Now<i class="material-icons right">send</i></button>     

    <div class="row"></div>
    <div class="row"></div>
    <div class="row"></div>

  </form>    
</div>

<!-- MODAL -->
<div id="modal1" class="modal">
  <div class="modal-content">
    <p class="center"><img src="/public/img/success.svg" alt="ordersuccess" class="responsive-img"></p>
    <p class="center"><a class="modal-action modal-close waves-effect waves-light btn" href="/products">Continue Shopping</a></p>
  </div>
</div>  

<!-- MODAL -->
<div id="formError" class="modal">
  <div class="modal-content">
    <p class="center"><img src="/public/img/permission.svg" alt="form_error" class="responsive-img"></p>
    <p class="center"><a class="modal-action modal-close waves-effect waves-light btn" href="#">close</a></p>
  </div>
</div>


