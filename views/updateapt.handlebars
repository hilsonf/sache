<div class="row"></div>

<div class="container headings">
  <h1>Update Apt</h1>
  <i class="material-icons">shopping_cart</i>
  <hr>
</div>
<div class="row"></div>
<div class="row"></div>
<div class="row"></div>
<div class="row">

  <form class="col s12 m12 l12" name="updatebooking" action="/updateapt/{{booking._id}}" method="POST">
          

    <div class="row form-section">

      <div class="input-field col s12 m4 l4">
        <i class="material-icons prefix">subject</i>
        <input id="updatefirstName" name="updatefirstName" type="text" class="validate" required value="{{booking.firstName}}">        
        <label for="updatefirstName">Enter First Name</label>
      </div>

      <div class="input-field col s12 m4 l4">
        <i class="material-icons prefix">subject</i>
        <input id="updatelastName" name="updatelastName" type="text" class="validate" required value="{{booking.lastName}}">        
        <label for="updatelastName">Enter Last Name</label>
      </div>

      <div class="input-field col s12 m4 l4">
        <i class="material-icons prefix">phone</i>
        <input id="updatetell" name="updatetell" type="tel" class="validate" required value="{{booking.tell}}">
        <label for="updatetell">Enter Telephone</label>
      </div>

      <div class="input-field col s12 m6 l6">
        <i class="material-icons prefix">access_time</i>
        <input id="updatebookDate" name="updatebookDate" type="text" class="datepicker" required value="{{dateTime.date}}">
        <label for="updatebookDate">Select Day</label>
      </div>

      
      <div class="input-field col s12 m6 l6">
          <i class="material-icons prefix">access_time</i>
          <label for="bookTime">Select Time</label>
          <input id="updatebookTime" name="updatebookTime" class="timepicker" type="time" required value="{{dateTime.time}}">
      </div>
                 

    </div>


    <div class="row"></div>

    <button class="btn waves-effect waves-light right margin" type="submit">Update Booking<i class="material-icons right">send</i></button>     

    <div class="row"></div>
    <div class="row"></div>
    <div class="row"></div>

  </form>    
</div>

<!-- MODAL -->
<div id="modal1" class="modal">
  <div class="modal-content">
    <p class="center"><img src="/public/img/success.svg" alt="ordersuccess" class="responsive-img"></p>
    <p class="center"><a class="modal-action modal-close waves-effect waves-light btn" href="/products">Continue Shopping</a></p>
  </div>
</div>  

<!-- MODAL -->
<div id="formError" class="modal">
  <div class="modal-content">
    <p class="center"><img src="/public/img/permission.svg" alt="form_error" class="responsive-img"></p>
    <p class="center"><a class="modal-action modal-close waves-effect waves-light btn" href="#">close</a></p>
  </div>
</div>


